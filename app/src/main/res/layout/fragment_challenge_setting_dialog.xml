<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ch1"
            android:contentDescription="Settings Icon"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="챌린지 설정"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#007BFF" />
    </LinearLayout>

    <!-- Recommended Challenge Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="추천 챌린지"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <CheckBox
                android:id="@+id/checkbox_recommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_recommended_challenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rectangle_1"
            android:gravity="center_vertical"
            android:hint="추천 챌린지를 선택하세요"
            android:padding="12dp"
            android:textColor="#333333"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Custom Challenge Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="개인 챌린지"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <CheckBox
                android:id="@+id/checkbox_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인" />
        </LinearLayout>

        <EditText
            android:id="@+id/edit_personal_challenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="나만의 챌린지 설정"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <!-- Date Setting Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="날짜 설정"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000000" />


        </LinearLayout>

        <TextView
            android:id="@+id/date_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/rectangle_1"
            android:hint="날짜를 선택하세요"
            android:textSize="16sp"
            android:textColor="#333333"
            android:gravity="center_vertical" />
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="만들기"
            android:layout_marginStart="8dp"
            android:backgroundTint="#007BFF"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:backgroundTint="#E0E0E0" />
    </LinearLayout>
</LinearLayout>
