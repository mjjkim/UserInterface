<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 상단 타이틀과 뒤로가기 버튼 -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#ffffff"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/setting"
            android:layout_marginLeft="10dp"
            android:contentDescription="설정 아이콘" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="설정"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/theme_color2" />

        <View
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/a"
            android:contentDescription="뒤로가기 버튼"
            android:layout_gravity="end" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/theme_color2"/>
    <!-- 설정 항목 리스트 -->
    <LinearLayout
        android:id="@+id/setting_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/top_bar"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- 프로필 변경 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/profile"
                android:contentDescription="프로필 변경" />

            <TextView
                android:id="@+id/profile_Change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="프로필 변경"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- 닉네임 변경 -->
        <LinearLayout
            android:id="@+id/nickname_Change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/nickname"
                android:contentDescription="닉네임 변경" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="닉네임 변경"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- 알림 설정 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/alram"
                android:contentDescription="알림 설정" />

            <TextView
                android:id="@+id/alram_Setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="알림 설정"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- 비밀번호 변경 -->
        <LinearLayout
            android:id="@+id/password_Change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#F5F5F5">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/password"
                android:contentDescription="비밀번호 변경" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="비밀번호 변경"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <!-- 하단 네비게이션 -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#ADD8E6"
        android:weightSum="3">


    </LinearLayout>
</RelativeLayout>
