<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경 색상 설정 -->
    <solid android:color="@color/white"/> <!-- 내부 배경 색상 -->

    <!-- 테두리 설정 -->
    <stroke
        android:width="2dp"
        android:color="@color/theme_color2"/>

    <!-- 네모난 모서리 설정 -->
    <corners android:radius="0dp"/> <!-- 모서리 둥글기를 0으로 설정 -->

    <!-- 내부 여백 설정 (선택 사항) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>